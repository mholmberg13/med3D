<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <link href="https://fonts.googleapis.com/css?family=Montserrat|Anton&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/css/app.css" />
  <title>Register for Med 3D</title>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
</head>

<body>
  <div class="registerpage-container">
    <div class="landing-container">
      <h1>Register </br> for </br> Med 3D</h1>
      <br>
      <form class="register" action="/users" method="POST">
          <label for="username">UserName:</label>
        <div>
            <input class="form-control" type="text" name="username" autofocus />
        </div>
        <br>
        <div class="password">
          <label for="password">Password:</label>
          <div>
            <input class="form-control" type="password" name="password" />
          </div>
        </div>
        <br>
        <div class="password">
            <label for="confirm-password">Confirm Password:</label>
            <div>
              <input class="form-control" type="password" name="confirm-password" />
            </div>
          </div>
        <br>
        
      <div class="login-buttons">
        <div class="role">
          <p>Please select your role:</p>
            <label class="radio-inline"><input type="radio" id="printer" name="role" value="printer" checked>Printer</label>
            <label class="radio-inline"><input type="radio" id="medical" name="role" value="medical">Med</label>
            <div class="daily-print">
              <label for="dialy_pa">Daily Print Ability:</label>
              <br>
              <input class="form-control" type="number" name="daily_pa">
            </div>
        </div>
        <input class="login" type="submit" value="Create User" />
        <a href="/">Back</a>
      </div>
      </form>
    </div>
  </div>
    <script>
    
      $(document).ready(function(){

        $("#medical").click(function(){
          $(".daily-print").hide()
        });

        $("#printer").click(function(){
          $(".daily-print").show();
        });

      })

  </script>
</body>

</html>